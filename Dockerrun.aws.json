{
    "AWSEBDockerrunVersion": "2",
    "containerDefinitions": [
        {
            "name": "fibonacci-client",
            "image": "tungnvan/fibonacci-client",
            "hostname": "client",
            "essential": false
        }, {
            "name": "fibonacci-server",
            "image": "tungnvan/fibonacci-server",
            "hostname": "api",
            "essential": false
        }, {
            "name": "fibonacci-worker",
            "image": "tungnvan/fibonacci-worker",
            "hostname": "worker",
            "essential": false
        }, {
            "name": "fibonacci-nginx",
            "image": "tungnvan/fibonacci-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["fibonacci-client", "fibonacci-server"]
        }
    ]

}